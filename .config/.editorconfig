# EditorConfig for .config dotfiles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Lua (Neovim)
[*.lua]
indent_style = space
indent_size = 4

# TOML (Alacritty, mise)
[*.toml]
indent_style = space
indent_size = 4

# Conf files (tmux, hyprland)
[*.conf]
indent_style = space
indent_size = 4

# Rasi (Rofi themes)
[*.rasi]
indent_style = space
indent_size = 4

# Markdown
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
