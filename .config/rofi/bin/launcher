#!/usr/bin/env bash
rofi \
    -show combi \
    -modes combi \
    -combi-modes "drun,window,ssh" \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-show-icons \
	-terminal alacritty\
	-kb-cancel Escape,Control+bracketleft \
    -theme "$HOME"/.config/rofi/themes/cat-mocha.rasi

